<%= link_to 'Nova doença', new_disease_path, :class => 'btn btn-primary' %>

<p id="notice"><%= notice %></p>

<h1>Lista de doenças</h1>

<div class="container-fluid">
  <div class="row">
      <div class="col-sm-12">
       <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Descrição</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @diseases.each do |disease| %>
              <tr>
                <td><%= disease.name.description %></td>
                <td><%= disease.description %></td>
                <td><%= link_to 'Visualizar', disease, :class => 'btn btn-primary' %></td>
                <td><%= link_to 'Editar', edit_disease_path(disease), :class => 'btn btn-primary' %></td>
                <td><%= link_to 'Excluir', disease, :class => 'btn btn-primary', method: :delete, data: { confirm: 'Confirma a exclusão?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



