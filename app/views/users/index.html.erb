<p id="notice"><%= notice %></p>

<h1>Lista de usuários</h1>

<%= link_to 'Novo usuário', new_user_path, :class => 'btn btn-primary' %>

<div class="container-fluid">
  <div class="row">
      <div class="col-sm-12">
       <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>E-mail</th>
              <th>Perfil</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.profile %></td>
                <td><%= link_to 'Vizualizar', user %></td>
                <td><%= link_to 'Editar', edit_user_path(user) %></td>
                <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Confirma a exclusão?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>