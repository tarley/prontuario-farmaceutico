<%= form_for(@pharmacotherapy) do |f| %>
  <% if @pharmacotherapy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pharmacotherapy.errors.count, "error") %> Não foi possivel salvar esse registro:</h2>

      <ul>
      <% @pharmacotherapy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
      <form id="demo-form" data-parsley-validate>
        <div class="x_panel">
          <div class="x_title">
            <h2>Dados Farmacoterapia</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
        
          <div class="x_content">
            <div class="row">
              
                <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                  <label for="heard">ID tratamento:</label>
                    <%= f.text_field :treatment_id, :required => "required", :class => "form-control col-md-7 col-xs-12"%>
                </div>
                
                <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                  <label class="heard">Plano de tratamento:</label>
                  <%= f.text_area :carePlan, :class => "form-control col-md-7 col-xs-12"%>
                </div>
                
              
                
                 <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                  <label for="heard">Medicamento:</label>
                   <%= f.select(:medicine, [['Selecione Medicamento', 0], 
                                ['Insulina', 1], 
                                ['Paracetamol', 2],
                                ['Vitamina Complexo B',3], 
                                ['Lacday', 4], 
                                ['Anador',5],
                                ['Dorflex', 6],
                                ['Aspirina', 7]], {}, 
                                {class: "form-control col-md-7 col-xs-12"}) %>

                </div>
                
                <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                  <label class="heard">Descrição da doença:</label>
                  <%= f.text_area :descriptionDisease, :class => "form-control col-md-7 col-xs-12"%>
                </div>
                
                  <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                  <label for="heard">Dosagem:</label>
                    <%= f.text_field :dosageSchedule, :required => "required", :class => "form-control col-md-7 col-xs-12"%>
                </div>
                
                  <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                  <label for="heard">Segurança:</label>
                    <%= f.text_field :safety, :required => "required", :class => "form-control col-md-7 col-xs-12"%>
                </div>
                
                <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                  <label for="heard">Eficácia:</label>
                    <%= f.text_field :effectiveness, :required => "required", :class => "form-control col-md-7 col-xs-12"%>
                </div>
                
                  <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                  <label for="heard">Tempo de uso:</label>
                  <%= f.number_field :timeUse, :required => "required", :class => "form-control col-md-7 col-xs-12"%>
                </div>        
                
            
                
                <div class="col-md-9 col-sm-12 col-xs-12 form-group">
                  <label class="heard">Dificuldade no uso:</label>
                  <%= f.text_area :useDificulty, :class => "form-control col-md-7 col-xs-12"%>
                </div>
                
                </div>
          </div>
        </div>
                
                <div class="container">
      <form id="demo-form" data-parsley-validate>
        <div class="x_panel">
          <div class="x_title">
            <h2>PRM</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
        
          <div class="x_content">
            <div class="row">
                
              
              <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                  <label class="heard">Selecione PRM:</label>
                  <div class="input-group col-md-12 col-sm-12 col-xs-12 form-group">
                    <%= f.select :prm_ids,
                      Prm.all.map { |u| [u.description, u.id] },
                      { include_blank: "Buscar PRM" },
                      { class: 'chosen-select' }
                    %>
                  </div>
              </div>
              
              
              
             
              <div class="actions">
    <%= f.submit 'Salvar', :class => 'btn btn-success'%>
  </div>
                 </div>
          </div>
           
        </div>
         
  
 
</div>
<% end %>
