<p id="notice"><%= notice %></p>

<%= link_to 'Nova Farmacoterapia', new_pharmacotherapy_path, :class => 'btn btn-primary' %>

<h1>Listing Pharmacotherapies</h1>

<div class="container-fluid">
  <div class="row">
      <div class="col-sm-12">
       <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Medicine</th>
              <th>Dosageschedule</th>
              <th>Safety</th>
              <th>Effectiveness</th>
              <th>Usedificulty</th>
              <th>Timeuse</th>
              <th>Careplan</th>
              <th>Descriptiondisease</th>
              <th>Treatment</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @pharmacotherapies.each do |pharmacotherapy| %>
              <tr>
                <td><%= pharmacotherapy.medicine %></td>
                <td><%= pharmacotherapy.dosageSchedule %></td>
                <td><%= pharmacotherapy.safety %></td>
                <td><%= pharmacotherapy.effectiveness %></td>
                <td><%= pharmacotherapy.useDificulty %></td>
                <td><%= pharmacotherapy.timeUse %></td>
                <td><%= pharmacotherapy.carePlan %></td>
                <td><%= pharmacotherapy.descriptionDisease %></td>
                <td><%= pharmacotherapy.treatment %></td>
                <td><%= link_to 'Visualizar', pharmacotherapy, :class => 'btn btn-primary' %></td>
                <td><%= link_to 'Editar', edit_pharmacotherapy_path(pharmacotherapy), :class => 'btn btn-primary' %></td>
                <td><%= link_to 'Excluir', pharmacotherapy, :class => 'btn btn-primary', method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


