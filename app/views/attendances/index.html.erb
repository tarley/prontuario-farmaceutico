



<div class="container-fluid">
  
  <p id="notice"><%= notice %></p>



<br>

<h1>Lista de Atendimentos</h1>
<div class"btn" style="float:right"><%= link_to 'Novo Atendimento', new_attendance_path, :class => 'btn btn-primary' %></div>
<%= form_tag(pacients_path, :method => :get) do %>
  <%= text_field_tag 'pesquisa', nil, placeholder: 'Buscar por CPF' %>
  <%= submit_tag "Pesquisar" , :class => 'btn btn-primary'%>
<% end %>
  
  
  
  <div class="row">
    
      <div class="col-sm-12">
   <div class="table-responsive">
  <table class="table">
          <thead>
            <tr>
              <th>Descrição</th>
              <th>Data Atendimnto</th>
              
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            
             <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.general_screen %></td>
        <td><%= attendance.attendance_date %></td>
        <td><%= attendance.pacient %></td>
        <td><%= link_to 'Vizualizar', attendance, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_attendance_path(attendance), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Excluir', attendance, :class => 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
            
            
           
          </tbody>
      </table>
    </div>
  </div>
</div>
</div>