<%= form_for(@attendance) do |f| %>
  <% if @attendance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attendance.errors.count, "error") %> NÃ£o foi possivel salvar esse registro:</h2>

      <ul>
      <% @attendance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <div class="field">
          <h4>Data do atendimento: </h4>
          <%= f.datetime_select :attendance_date %>
        </div><br>
      </div>
      <div class="col-sm-6">
        <div class="field">
          <h4>Tela geral: </h4>
          <%= f.text_area :general_screen %>
        </div><br>      
      </div>
    </div>
  </div>
  
  <div class="actions">
     <%= f.submit 'Salvar', :class => 'btn btn-success'%>
  </div>
<% end %>
