

<div class="container-fluid">
  <%= form_for(@attendance) do |f| %>
  <% if @attendance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attendance.errors.count, "error") %> Não foi possivel salvar esse registro:</h2>

      <ul>
      <% @attendance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
         
                

<div class="container">
  
  <!-- Row start -->
  <div class="row">
    <div class="col-md-12 col-sm-6 col-xs-12">
      <div class="panel panel-default">
        
       
        <div class="panel-body">
          <form class="form-horizontal row-border" action="#">
            <div class="form-group">
              
              <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                <label class="heard">PRM:</label>
                <div class="input-group col-md-12 col-sm-12 col-xs-12 form-group">
                  <%= f.select :prm_id,
                    Prm.all.map { |u| [u.description, u.id] },
                    { include_blank: "Buscar PRM" },
                    { class: 'chosen-select' }
                  %>
                </div>
              </div>
           
             <label class="col-md-2 control-label">Quadro geral:</label> 
              <div class="col-md-10">
                <%= f.text_area :general_screen, :class => "form-control" %>
              </div>
             <label class="col-md-2 control-label">Data do atendimento:</label> 
              <div class="col-md-4">
                <%= f.datetime_select :attendance_date, :class => "form-control" %>
              </div>
             



<div class="container-fluid">
  <%= form_for(@attendance) do |f| %>
  <% if @attendance.errors.any? %>
