<%= form_for(@attendance) do |f| %>
  <% if @attendance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attendance.errors.count, "error") %> Não foi possivel salvar esse registro:</h2>

      <ul>
      <% @attendance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  
  <!-- Row start -->
  <div class="row">
    <div class="col-md-12 col-sm-6 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <i class="icon-calendar"></i>
          <h3 class="panel-title">Paciente: <%= :pacient_id %></h3>
        </div>
       
        <div class="panel-body">
          <form class="form-horizontal row-border" action="#">
            <div class="form-group">
           
             <label class="col-md-2 control-label">Quadro geral:</label> 
              <div class="col-md-10">
                <%= f.text_area :general_screen, :class => "form-control" %>
              </div>
             <label class="col-md-2 control-label">Data do atendimento:</label> 
              <div class="col-md-4">
                <%= f.datetime_select :attendance_date, :class => "form-control" %>
              </div>
             <label class="col-md-2 control-label">Paciente:</label> 
              <div class="col-md-4">
                <%= f.text_field :pacient_id, :class => "form-control" %>
              </div>
              <div class="actions">
                <%= link_to 'Adicionar doença', new_disease_path, :class => 'btn btn-success' %>
                
                
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Row end -->
  <div class="actions">
    <%= f.submit 'Salvar', :class => 'btn btn-success' %>
  </div>
</div>
<% end %>
