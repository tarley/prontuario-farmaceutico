<p id="notice"><%= notice %></p>

<h1>Lista de Pacientes</h1>
<%= link_to '<i class="glyphicon glyphicon-plus"></i>Novo Paciente'.html_safe, new_pacient_path, :class =>'btn btn-primary' %>

<%= form_tag(pacients_path, :method => :get) do %>
  <%= text_field_tag 'pesquisa', nil, placeholder: 'Buscar por CPF' %>
  <%= submit_tag "Pesquisar" , :class => 'btn btn-primary'%>
<% end %>
<div class="container-fluid">
  <div class="row">
      <div class="col-lg-12">
       <div class="table-responsive">
        <table class="table">
          <thead>
              <tr>
                <th>Nome</th>
                <th style="width: 12%">CPF</th>
                <th>Lugar de Atendimento</th>
                <th style="width: 12%">Telefone</th>
                <th>Endereço</th>
                <th>Profissional Serviço</th>
                <th>Motivo Consulta</th>
                <th style="width: 20%">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @pacients.each do |pacient| %>
                <tr>
                  <td><%= link_to pacient.name.html_safe, pacient %></td>
                  <td><%= pacient.cpf %></td>
                  <td><%= pacient.place_attendence %></td>
                  <td><%= pacient.phone %></td>
                  <td><%= pacient.address %></td>
                  <td><%= pacient.services_professional %></td>
                  <td><%= pacient.reason_meeting %></td>
                  <td>
                    <div class="btn-group">
                      <a href="/attendances/new?idPaciente=<%=pacient.id%>" class="btn btn-primary">Novo Atendimento</a>
                      <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_pacient_path(pacient), :class => 'btn btn-warning', "data-original-title" => "Editar", "data-placement" => "top", "data-toggle" => "tooltip" %>
                      <!--<%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, pacient, :class => 'btn btn-danger', method: :delete, data: { confirm: 'Confirma a exclusão?' }, "data-original-title" => "Delete", "data-placement" => "top", "data-toggle" => "tooltip" %>-->
                    </div>  
                  </td>  
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
