<p id="notice"><%= notice %></p>

<h1>Lista - Tipos de sexo</h1>

<btn><%= link_to 'Novo tipo sexo', new_type_sex_path, :class => 'btn btn-primary' %></btn>

<br>

<table class='table'>
  <thead>
    <tr>
      <th>Descrição:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @type_sexes.each do |type_sex| %>
      <tr>
        <td><%= type_sex.description %></td>
        <td><%= link_to 'Visualizar', type_sex, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_type_sex_path(type_sex), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Excluir', type_sex, :class => 'btn btn-primary', method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


